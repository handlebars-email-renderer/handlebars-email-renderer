{
  "name": "handlebars-email-renderer",
  "version": "0.0.0",
  "description": "Allows you to create components that render to email HTML using Handlebars.js.",
  "private": false,
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "types": "./lib/cjs/types/index.d.ts",
  "main": "/lib/cjs/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "clean": "rm -rf ./lib",
    "reinstall": "rm -r node_modules && yarn install",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "test": "mocha ./test/*.spec.mjs",
    "semantic-release": "semantic-release",
    "prepack": "npm run build"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/handlebars-email-renderer/handlebars-email-renderer",
  "keywords": [
    "handlebars",
    "template",
    "mail",
    "email",
    "html",
    "typescript",
    "javascript",
    "npm",
    "nodejs"
  ],
  "author": "Xavier Lou√©",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/handlebars-email-renderer/handlebars-email-renderer/issues"
  },
  "homepage": "https://github.com/handlebars-email-renderer/handlebars-email-renderer",
  "dependencies": {
    "deasync": "^0.1.28",
    "handlebars": "^4.7.7"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/deasync": "^0.1.2",
    "@types/jest": "^29.4.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.1",
    "chai": "^4.3.7",
    "jest": "^29.4.3",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
