{
  "name": "handlebars-email-renderer",
  "version": "2.0.4",
  "description": "Allows you to create components that render to email HTML using Handlebars.js.",
  "private": false,
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "types": "./lib/cjs/types/index.d.ts",
  "main": "/lib/cjs/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "lint": "eslint --ext .ts ./",
    "format": "prettier --write \"**/*.{js,mjs,ts,md,json,yml}\" --ignore-path .gitignore",
    "clean": "rm -rf ./lib",
    "reinstall": "rm -r node_modules && yarn install",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "test": "mocha ./test/index.spec.ts --extension ts -r ts-node/register",
    "semantic-release": "semantic-release",
    "prepack": "npm run build"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/handlebars-email-renderer/handlebars-email-renderer",
  "keywords": [
    "handlebars",
    "template",
    "mail",
    "email",
    "html",
    "typescript",
    "javascript",
    "npm",
    "nodejs"
  ],
  "author": "Xavier Lou√© <xavierloue@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/handlebars-email-renderer/handlebars-email-renderer/issues"
  },
  "homepage": "https://github.com/handlebars-email-renderer/handlebars-email-renderer",
  "dependencies": {
    "deasync": "^0.1.28",
    "handlebars": "^4.7.7"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/deasync": "^0.1.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "semantic-release": "^20.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": "^14.15.0 || ^16.10.0 || >=18.0.0"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/ban-ts-comment": "off"
    }
  }
}
